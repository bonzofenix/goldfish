.post
  .post-actions
    .nav
  .post-title.page-header
    %a{href: "#{post.show_url}"}
      %h2= post.title
  .post-content
    = markdown post.content
  .label.label-default
    created at:
    =post.date.strftime('%Y-%m-%d')
  .tags
    - post.tags.each do |t|
      .label.label-default
        = t.name
  %hr

